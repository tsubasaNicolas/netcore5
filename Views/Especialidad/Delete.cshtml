@model Turnos.Models.Especialidad

<h4>¿Está ud seguro de eliminar el siguiente registro?</h4>

<div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card hoverable orange">
                <div class="card-content white-text">
                    <span class="card-title">
                        <h5><b> @Html.DisplayFor(model => model.Descripcion)</b></h5>
                    </span>

                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdEspecialidad" />
                        <input type="submit" value="Eliminar"
                            class="waves-effect waves-light btn-small orange lighten-2" />
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>